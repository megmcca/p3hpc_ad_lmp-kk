echo Starting run to create log.lammps.date=2Apr25.model=lj.machine=elcap.pkg=kokkos_gpu.kind=weak.size=256K.node=128.mpi=4.gpu=4.mode=off
# Clear the system wide reserved core setting, since we do a custom set with corespecbal
unset MPIBIND_RESTRICT
